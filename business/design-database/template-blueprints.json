    "restaurant": {
      "start": {
        "name": "Restaurant Start",
        "industry": "restaurant",
        "tier": "Start",
        "pages": 1,
        "sections": [
          {
            "id": "hero",
            "type": "hero-centered",
            "content": {
              "headline": "[Restaurant Naam]",
              "subheadline": "[Tagline - sfeer/keuken type]",
              "background": "atmosphere-photo",
              "cta_primary": {
                "text": "Reserveer een tafel",
                "action": "tel:PHONE",
                "style": "btn-primary"
              },
              "cta_secondary": {
                "text": "Bekijk menu",
                "action": "scroll-to-menu",
                "style": "btn-secondary"
              }
            }
          },
          {
            "id": "about",
            "type": "text-block",
            "content": {
              "headline": "Over [Restaurant]",
              "text": "2-3 sentences about cuisine, atmosphere, unique selling point",
              "max_length": "300 chars"
            }
          },
          {
            "id": "highlights",
            "type": "feature-grid",
            "content": {
              "headline": "Onze specialiteiten",
              "items": 3,
              "layout": "3-col",
              "content_type": "dish-highlight",
              "each_item": {
                "image": "dish-photo",
                "title": "Dish name",
                "description": "Brief description (max 80 chars)"
              }
            }
          },
          {
            "id": "hours",
            "type": "info-block",
            "content": {
              "headline": "Openingstijden",
              "layout": "simple-list",
              "data": ["Maandag: gesloten", "Di-Vr: 17:00-22:00", "Za-Zo: 12:00-23:00"]
            }
          },
          {
            "id": "menu-preview",
            "type": "cta-block",
            "content": {
              "headline": "Bekijk ons menu",
              "text": "Ontdek onze gerechten",
              "cta": {
                "text": "Download menu (PDF)",
                "action": "download-pdf",
                "style": "btn-secondary"
              }
            }
          },
          {
            "id": "contact",
            "type": "contact-block",
            "content": {
              "headline": "Contact",
              "address": "[Straatnaam 123, 1234 AB Stad]",
              "phone": "[06-12345678]",
              "email": "[info@restaurant.nl]",
              "show_map": true
            }
          },
          {
            "id": "footer-cta",
            "type": "cta-banner",
            "content": {
              "headline": "Reserveren?",
              "cta": {
                "text": "Bel direct",
                "action": "tel:PHONE",
                "style": "btn-primary-lg"
              }
            }
          }
        ],
        "navigation": {
          "type": "minimal-sticky",
          "items": ["Home", "Menu", "Contact"],
          "mobile": "hamburger"
        },
        "colors": {
          "primary": "warm-accent",
          "suggested": "#C75B39 (terracotta)"
        },
        "fonts": {
          "heading": "Inter",
          "body": "Inter"
        },
        "required_assets": [
          "Hero atmosphere photo",
          "3 dish photos",
          "Logo",
          "Menu PDF"
        ],
        "conversion_focus": [
          "Phone reservation (primary)",
          "Menu download (secondary)"
        ]
      },
      
      "groei": {
